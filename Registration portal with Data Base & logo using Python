from tkinter import *
from PIL import Image, ImageTk
from tkinter import messagebox  # showinfo,showerror,showwarning,askquestion,askokcancel,askyesno
import sqlite3

################################################################################
# to create tkinter root and main title and dimensions...............
root = Tk()
root.geometry("500x578")
root.title("Registration form")

##################################################################################
# to insert image
imge = Image.open("E:\Photos\my_photo.jpeg")  # copy your logo
photo = ImageTk.PhotoImage(imge)

lab = Label(image=photo)
lab.pack()


##################################################################################
# two functions used menu bar
def exitt():
    x = messagebox.askyesno("Quit", "Do you want to exit?")
    Label(root, text=x).pack()
    if (x == 1):
        root.destroy()


def abt():
    # print("Hello,This is my first ")
    messagebox.showinfo("Welcome to Author", "This is demo for menu fields:")


def home1():
    messagebox.showinfo("Home", "Welcome to our Registration portal-->>")


def abtt():
    # print("Hello,This is my first ")
    messagebox.showinfo("Welcome to Author", "This is demo for about fields:")


##############################################################################
# to create mant data bases at a time....comment the printt function and change command in button click me!,execute and open db browser->open data bases.....

def database():
    name1 = fn.get()
    last1 = ln.get()
    date = dob.get()
    country = var.get()

    pyt = py

    gender = radio_var.get()
    conn = sqlite3.connect("Form.db")
    with conn:
        cursor = conn.cursor()
    cursor.execute('CREATE TABLE IF NOT EXISTS Student (Name TEXT,Last TEXT,DOB TEXT,Country TEXT,Programming TEXT,Gender TEXT)')
    cursor.execute('INSERT INTO Student(Name,Last,DOB,Country,Programming,Gender) VALUES(?,?,?,?,?,?)',(name1, last1, date, country, pyt, gender))
    conn.commit()
    tkinter.messagebox.showinfo("Welcome", "Registration Successfull!!")
    ##############################################################################


def rateus():
    wind = Tk()
    wind.geometry("320x260")
    wind.title("Rate us")

    var_1 = radio_var.get()
    sug = StringVar().get()

    label0 = Label(wind, text="Rate us->", relief="solid", fg="blue", bg="white", font=("cambridge", 15, "bold"))
    label0.place(x=30, y=25)

    rad_1 = Radiobutton(wind, text="1", variable=radio_var, value="1")
    rad_1.place(x=150, y=25)

    rad_2 = Radiobutton(wind, text="2", variable=radio_var, value="2")
    rad_2.place(x=185, y=25)

    rad_3 = Radiobutton(wind, text="3", variable=radio_var, value="3")
    rad_3.place(x=220, y=25)

    rad_4 = Radiobutton(wind, text="4", variable=radio_var, value="4")
    rad_4.place(x=250, y=25)

    rad_5 = Radiobutton(wind, text="5", variable=radio_var, value="5")
    rad_5.place(x=280, y=25)

    label1 = Label(wind, text="Suggestions:", relief="solid", fg="blue", bg="white", font=("cambridge", 15, "bold"))
    label1.place(x=30, y=80)

    ent1 = Entry(wind, textvar=sug)
    ent1.place(x=180, y=80)

    vari = Button(wind, text="Click Us!", fg="white", bg="green", font=("cambridge", 15, "bold"), command=ratt)
    vari.place(x=100, y=150)


def ratt():
    tkinter.messagebox.showinfo("Rate us", "Thank you!!\n Your suggestions will be taken for further development ")


#############################################################################
# To create top bar or menu like file,edit options......
menu = Menu(root)
root.config(menu=menu)

subm1 = Menu(menu)
menu.add_cascade(label="File", menu=subm1)
subm1.add_command(label="Home", command=home1)
subm1.add_command(label="About", command=abt)

subm2 = Menu(menu)
menu.add_cascade(label="Option", menu=subm2)
subm2.add_command(label="Rate us", command=rateus)
subm2.add_command(label="Exit", command=exitt)


##############################################################################

# @@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@'@@@@@@@
def forms():
    x = input("Enter password:")

    if (x == "abc"):
        con = sqlite3.connect('Form.db')
        cur = con.cursor()

        cur.execute('select * from Student')
        obj = cur.fetchall()

        row_count = len(obj)
        print("'Full Name',            'DOB'      ,     'Country'     ,      'Pl'     ,    'Gender'   ")
        print("***************************************************************************************")
        i = 0
        while i < row_count:
            print(obj[i][0], ' ' * (5 - len(obj[i][0])), obj[i][1], ' ' * (15 - len(obj[i][1])), obj[i][2],
                  ' ' * (15 - len(obj[i][2])), obj[i][3], ' ' * (15 - len(obj[i][3])), obj[i][4],
                  ' ' * (15 - len(obj[i][4])), obj[i][5], ' ' * (15 - len(obj[i][5])))
            i += 1

    root.destroy()


