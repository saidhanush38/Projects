# for getting second window or page
def sec_win():
    wind = Tk()
    wind.geometry("350x200")
    wind.title("Welcome New user...")

    menu = Menu(wind)
    wind.config(menu=menu)

    subm1 = Menu(menu)
    menu.add_cascade(label="File", menu=subm1)
    # subm1.add_command(label="Home",command=home1)
    subm1.add_command(label="About", command=abt)

    subm2 = Menu(menu)
    menu.add_cascade(label="Option", menu=subm2)
    subm2.add_command(label="Rate us", command=rateus)
    subm2.add_command(label="Exit", command=exitt)

    ############################################

    label_1 = Label(wind, text="New User???", relief="solid", font=("arial", 12, "bold"))
    label_1.place(x=90, y=70)
    label_2 = Label(wind, text="*Read about our company", font=("arial", 8, "bold"))
    label_2.place(x=90, y=100)

    but_1 = Button(wind, text="exit", width=12, bg="Red", font=("arial", 12, "bold"), command=exitt)
    but_1.place(x=180, y=130)

    but_2 = Button(wind, text="About", width=12, font=("arial", 12, "bold"), command=abtt)
    but_2.place(x=35, y=130)


